<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.group3project.Patient_Doctor.UserProfileController"
    prefHeight="600.0" prefWidth="800.0">
    <children>
        <VBox alignment="CENTER" spacing="10.0" layoutX="150.0" layoutY="50.0">
            <TextField fx:id="usernameField" promptText="Username" />
            <PasswordField fx:id="passwordField" promptText="Password" />
            <TextField fx:id="emailField" promptText="Email" />
            <TextField fx:id="doctorNameField" promptText="Doctor Name" />
            <TextField fx:id="clinicNameField" promptText="Clinic Name" />
            <HBox spacing="10">
                <Button fx:id="saveButton" text="Save" onAction="#handleSaveAction" />
                <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancelAction" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>